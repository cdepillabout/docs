



termcapinfo xterm*|xs|rxvt ti@:te@

term screen-256color

# Use bright colors for bold text.  (Most terminal emulators do this already.)
attrcolor b ".I"

# Default setting for new windows is that all characters cleared by an
# erase/insert/scroll/clear operation will be displayed in the current
# background color.
defbce "on"

hardstatus on
hardstatus alwayslastline

# This is for screen-4.0:
# hardstatus string "%{= wb}%-w%{.yb}%n %t%{-}%+w %=%{b r} %H %{..b}%S %{..K}%C%a "

# This is for screen-5.0:
hardstatus string "%{= 4;7}%-w%{= 4;3}%n %t%{-}%{= 4;7}%+w %=%{b 1;7} %H %{= 4;7}%S %{= 8;7}%C%a "

#caption always "%{kB}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{kB}%?%+Lw%?"

startup_message off

# turn off visual bell
vbell off

# Autodetach session on hangup instead of terminating screen completely
autodetach on 

# Instead of Control-a, make the escape/command character be Control-b
#escape ^Zz 

# give more scroll back
defscrollback 20000

# turn on alternate screen support
altscreen on


# bash will be replaced by the running command
shelltitle " "

# bash will get the running command added after it
#shelltitle "$ |bash:"

# Don't wait to send the ESC key to the underlying shell.
# This was causing problems in lag in emacs when coming out of insert mode.
# https://github.com/syl20bnr/spacemacs/issues/7145
# http://unix.stackexchange.com/questions/8439/gnu-screen-makes-vim-esc-key-slow
maptimeout 0

screen 7
screen 6
screen 5
screen 4
screen 3
screen 2
screen 1

