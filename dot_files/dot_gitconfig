[color]
	ui = auto
[rerere]
	enabled = true
[rebase]
	autosquash = true
[push]
	# git has deprecated "tracking" and it will be called
	# "upstream" in future git releases.  "tracking" is still
	# currently working though.  Old versions of git don't
	# know about "upstream".
	default = tracking
[merge]
	defaultToUpstream = true
	ff = only
[status]
	submoduleSummary = true
[diff]
	tool = vimdiff
[alias]
	br = branch
	ci = commit
	co = checkout
	ps = push
[fetch]
	prune = true
[submodule]
	recurse = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
