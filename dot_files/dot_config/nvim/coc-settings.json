{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "stack.yaml",
        "*.cabal",
        "cabal.config",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [ "hs", "lhs", "haskell" ],
      // HLS might need to be restarted quite a few times before it makes
      // enough progress in compiling everything to show diagnostics.
      "maxRestartCount": 50,
      "initializationOptions": { "languageServerHaskell": {} },
      "settings": {
          "haskell": {
              "formattingProvider": "fourmolu",
              "checkProject": false,
              "plugin": {
                  "stan": { "globalOn": false }
              }
          }
      }
    }
  },
  "suggest": {
    "disableKind": true,
    "snippetsSupport": false,
    "autoTrigger": "none"
  },
  "diagnostic": {
    "enable": true,
    "messageDelay": 9999999,
    "virtualText": true,
    "virtualTextCurrentLineOnly": false,
    "virtualTextLines": 1,
    "virtualTextPrefix": " —— "
  },
  "list.height": 20,
  "codeLens.enable": true,
  "codeLens.position": "eol",
  "codeLens.separator": " —— ",
  "coc.preferences.enableMarkdown": true,
  "coc.preferences.jumpCommand": "tab drop"
}
